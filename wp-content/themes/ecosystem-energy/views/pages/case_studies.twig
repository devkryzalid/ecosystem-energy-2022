{% extends 'base.twig' %}

{% block pageClass %}grey page-case-studies{% endblock %}

{% block content %}

  {% include 'partials/titles/page-title.twig' with { 
    large: true,
    upper: 'Case studies',
    title: 'Working with energy ecosystems is all we do', 
    text: 'We have built a business that re-connects engineering design, construction and commissioning so every choice we make contributes to better project outcomes.' 
  } %}

  {% include 'partials/lists/filters.twig' with { 
    featured: featured,
    large: true,
    url: 'case-studies',
    fields: { industries: industries },
    labels: { industries: 'Sectors' }
  } %}
 
  <div id="ajax-content">
    <div class="inner">
      {% include 'partials/lists/case_studies_list.twig' with { items: case_studies, featured: featured } %}
    </div>
  </div>

{% endblock %}

{% block specific_script %}
	<script src="{{ theme.link }}/dist/scripts/pages/ajax-content.js"></script>
{% endblock %}