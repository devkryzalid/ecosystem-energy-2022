{% extends 'base.twig' %}

{% block pageClass %}grey page-case-studies{% endblock %}

{% block content %}

  <div class="large container">
    {% include 'partials/titles/block-hero.twig' with { 
      surtitle: 'Case studies',
      title: 'Working with energy ecosystems is all we do',
      text: 'We have built a business that re-connects engineering design, construction and commissioning so every choice we make contributes to better project outcomes.',
      filters: true
    } %}
  </div>

  {% include 'partials/lists/filters.twig' with { 
    featured: featured,
    large: true,
    url: 'case-studies',
    fields: { industries: industries },
    labels: { industries: 'Sectors' },
    limit: 2
  } %}
 
  <div id="ajax-content">
    {% include 'partials/lists/loading.twig' %}
    <div class="inner">
      {% if case_studies|length %} 
        {% include 'partials/case-studies-list.twig' with { items: case_studies, featured: featured } %}
      {% else %} 
        {% include 'partials/lists/no-results.twig' %} {% endif %}
    </div>
  </div>

  {% include 'partials/contact-cta.twig' %}

{% endblock %}

{% block specific_script %}
	<script src="{{ theme.link }}/dist/scripts/pages/ajax-content.js"></script>
{% endblock %}