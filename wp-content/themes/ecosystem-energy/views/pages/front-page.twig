{% extends 'base.twig' %}

{% block pageClass %}front-page{% endblock %}

{% block content %}

  <div class="large container">
    {% include 'partials/titles/home-hero.twig' with { 
      title: home_hero.title, 
      content: home_hero.content, 
      button: home_hero.button 
    } %}
  </div>

  <div class="grey wrapper bg-icon">
		<div class="container sectors-ctn">
      <div class="title-column">
        <h2>{{ sectors.title }}</h2>
        <p>{{ sectors.content }}</p>
      </div>

      <div class="content-column">
        {% for industry in industries %}
          <a href="{{ industry.link }}">
            <span>{{ industry.title }}</span>
          </a>
        {% endfor %}
      </div>
		</div>

		<div class="container news-ctn">
      {% include 'partials/block-item.twig' with { 
        surtitle: 'News',
        title: news[0].title, 
        link: news[0].link, 
        footer: news[0].post_date|date("F d, Y"),
        class: 'no-image white-bg text-padding'
      } %}

      {% include 'partials/block-item.twig' with { 
        surtitle: 'Perspectives',
        title: perspective[0].title, 
        link: perspective[0].link, 
        footer: perspective[0].post_date|date("F d, Y"),
        class: 'no-image white-bg text-padding'
      } %}
    </div>
  </div>

	{% if featured_block %}
    {% include 'partials/block-cta.twig' with { 
      surtitle: featured_block.upper_title,
      title: featured_block.title, 
      description: featured_block.content,
      image: featured_block.image,
      buttonUrl: featured_block.button.url,
      buttonTitle: featured_block.button.title,
      mirror: true
    } %}
	{% endif %}

  <div class="blue wrapper">
    <div class="container slider-ctn">

      <h2>Featured case studies</h2>
      <a href="" class="internal link">See all our Case studies</a>

      <div class="swiper-container">
        <div class="swiper-wrapper">
        
          {% for item in case_studies %}
            <div class="swiper-slide slide-img">
              <img src="{{ item.case_study.thumbnail.src('medium') }}" alt="{{ item.case_study.thumbnail.title }}">
              <div class="surtitle">{{ item.industry }}</div>
              <div class="title">{{ item.case_study.title }}</div>
            </div>
          {% endfor %}

        </div>
        <div class="swiper-pagination"></div>
      </div>

      <div class="swiper-navigation">
        <div class="prev"></div>
        <div class="next"></div>
      </div>

    </div>
  </div>

	{% if career_block %}
    {% include 'partials/block-cta.twig' with { 
      surtitle: career_block.upper_title,
      title: career_block.title, 
      description: career_block.content,
      image: career_block.image,
      buttonUrl: career_block.button.url,
      buttonTitle: career_block.button.title
    } %}
	{% endif %}

  {% include 'partials/contact-cta.twig' %}

{% endblock %}

{% block specific_script %}
	<script src="{{ theme.link }}/dist/scripts/pages/front-page.js"></script>
{% endblock %}