{% extends 'base.twig' %}

{% block pageClass %}grey page-news{% endblock %}

{% block content %}

  <div class="large container">
    {% include 'partials/common/block-hero.twig' with { title: __('News', 'ecosystem-energy'), filters: true, class: 'with-margin' } %}
  </div>

  {% include 'partials/common/filters.twig' with { large: true, featured: featured, url: 'news' } %}
 
  <div id="ajax-content">
    {% include 'partials/common/loading.twig' %}
    <div class="inner">
      {% if posts|length %} 
        {% include 'partials/news-list.twig' %}
      {% else %} 
        {% include 'partials/common/no-results.twig' %} {% endif %}
    </div>
  </div>

  {% include 'partials/common/contact-cta.twig' %}

{% endblock %}

{% block specific_script %}
	<script src="{{ theme.link }}/dist/scripts/pages/ajax-content.js"></script>
{% endblock %}