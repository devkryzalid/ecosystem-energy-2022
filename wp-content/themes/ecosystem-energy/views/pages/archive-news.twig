{% extends 'base.twig' %}
{% block content %}
    <div class="container">
        <h2>NEWS</h2>
        <div class="categories">
            <ul>
                {% for locale in locales %}
                <li>
                    {{ locale.term_id }} -  {{ locale.name }}
                </li>
                {% endfor %}
            </ul>
        </div>
      
        <div class="list-ctn -style-2">
            {% for post in posts %}
                <article class="article">
                    <div class="img-ctn">
                        <div class="date-ctn">
                            <span class="day">{{ post.date('j') }}</span>
                            <span class="month">{{ post.date('F') }}</span>
                        </div>
                    </div>
                    <h3 class="article-title"><a href="{{ post.link }}">{{ post.title }}</a></h3>
                    <div class="article-extract">{{ post.content|truncate(12, '...')}}</div>
                    <img class="" src="{{ post.thumbnail.src('medium') }}" alt="{{ post.thumbnail.title }}">
                </article>
            {% endfor %}
        </div>
    </div>
{% endblock %}