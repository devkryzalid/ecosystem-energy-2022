{% extends 'base.twig' %}

{% block pageClass %}grey{% endblock %}

{% block content %}

  <div class="large container">
    {% include 'partials/common/block-hero.twig' with { title: post.title, filters: true } %}
  </div>

  {% include 'partials/common/filters.twig' with { 
    large: true,
    featured: featured,
    url: 'perspectives',
    fields: { categories: categories }
  } %}
 
  <div id="ajax-content">
    {% include 'partials/common/loading.twig' %}
    <div class="inner">
      {% include 'partials/perspectives-list.twig' %}
    </div>
  </div>

  {% include 'partials/common/contact-cta.twig' %}

{% endblock %}

{% block specific_script %}
	<script src="{{ theme.link }}/dist/scripts/pages/ajax-content.js"></script>
{% endblock %}