{% extends 'base.twig' %}

{% block pageClass %}page-perspective{% endblock %}

{% block structuredData %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ current_url }}"
      },
      "headline": "{{ post.title }}",
      "image": ["{{ post.thumbnail.src }}"],
      "datePublished": "{{ post.post_date }}",
      "author": {
        "@type": "Organization",
        "name": "Ecosystem",
        "url": "{{ site.url }}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Ecosystem",
        "logo": {
          "@type": "ImageObject",
          "url": "{{ theme.link }}/logo.png"
        }
      }
    }
  </script>
{% endblock %}

{% block content %}

  {% include 'partials/common/post-hero.twig' with { post: post, tags: tags } %}

  <div class="small container">
    <div class="gutenberg-content">
      {{ post.content }}
    </div>
    
    {% include 'partials/perspective-author.twig' %}
  </div>

  {% if related_posts|length %}
    <div class="grey wrapper">
      {% include 'partials/perspective-related.twig' %}
    </div>
  {% endif %}

  {% include 'partials/common/contact-cta.twig' %}
  </div>
{% endblock %}