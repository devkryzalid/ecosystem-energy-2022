{% extends 'base.twig' %}

{% block pageClass %}blue-head blue-footer page-leadership{% endblock %}

{% block content %}
  <div class="blue wrapper">
    <div class="large container">

      {% include 'partials/common/block-hero.twig' with {
        title: __('Leadership', 'ecosystem-energy'),
        text: post.meta('text'),
        class: 'invert with-margin'
      } %}

      {% include 'partials/leadership-list.twig' with { list: leaders, prefix: 'leader' } %}

      {% include 'partials/common/block-hero.twig' with {
        title: __('Our regional managers', 'ecosystem-energy'),
        class: 'invert title-only'
      } %}

      {% include 'partials/leadership-list.twig' with { list: directors, prefix: 'director' } %}

      {% include 'partials/common/contact-cta.twig' with { invert: true } %}

    </div>
  </div>

  {% include 'partials/leadership-panel.twig' %}

{% endblock %}

{% block specific_script %}
	<script src="{{ theme.link }}/dist/scripts/pages/leadership.js"></script>
{% endblock %}