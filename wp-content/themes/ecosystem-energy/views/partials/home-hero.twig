<div class="home-hero-ctn">
  <div class="title-ctn">
    <h1 class="title" data-aos="fade-up">{{ title }}</h1>
    <div data-aos="fade-up" data-aos-delay="300">
      <a class="internal link" href="{{ button.url }}" target="{{ button.target }}">{{ button.title }}</a>
    </div>
  </div>

	<div class="spinner-ctn">
    <img id="home-spinner" src="{{ theme.link }}/assets/images/ui/spinner.png" alt="">
    <div class="content">
      <div class="text-ctn" data-aos="fade-up" data-aos-delay="600">{{ content }}</div>
      <div class="btn-ctn" data-aos="fade-up" data-aos-delay="800">
        <a class="circle btn" href="#scroll-content"><i class="icon-arrow-up"></i></a>
      </div>
    </div>
  </div>
</div>
