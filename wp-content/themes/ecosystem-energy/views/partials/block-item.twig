{% set tImage = TimberImage(image) %}

<{{ url ? 'a' : 'div' }} class="block-item {{ class }}" {% if url %} href="{{ url }}" {% endif %} {{ delay ? "data-aos=\"fade-up\" data-aos-delay=\"#{delay}\"" : '' }} {% if data_id %} data-id="{{ data_id }}" {% endif %}> 

  <div class="image">
    <img src="{{ tImage.src('medium') }}" alt="{{ image.title }}" />
  </div>

  <div class="content">
      {% if surtitle %}<div class="surtitle">{{ surtitle }}</div>{% endif %}
      {% if title %}<h3 class="title">{{ title }}</h3>{% endif %}
      {% if description %}<div class="description">{{ description }}</div>{% endif %}

      {% block content %}{% endblock %}

      {% if footer %}<div class="footer">{{ footer }}</div>{% endif %}
  </div>
</{{ url ? 'a' : 'div' }}>