<a class="block-item {% if isFeatured %}featured{% endif %}" href="{{ url }}">
  <div class="image">
    <img src="{{ image.src('medium') }}" alt="{{ image.title }}" />
  </div>

  <div class="content">
    {% if section %}<div class="section">{{ section }}</div>{% endif %}
    <h3 class="title">{{ title }}</h3>
    <div class="description">{{ description }}</div>
    {% if date %}<div class="footer">{{ date }}</div>{% endif %}
  </div>
</a>