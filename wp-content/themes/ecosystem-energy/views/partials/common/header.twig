<header id="header" class="show-main-pane">

  {# SEARCH FIELD #}
  <form id="search-pane" action="{{ site.url }}" role="search" method="get">
    <input type="text" name="s" placeholder="{{ __('Search', 'ecosystem-energy') }}..." />
    <a id="search-close"><i class="icon-close-medium"></i></a>
  </form>

  {# COUNTRY SELECTOR #}
  <form id="country-pane" method="GET">
    <div class="content">
      <p>{{ __('To read the appropriate content, please select your country:', 'ecosystem-energy') }}</p>

      <div class="countries">
        <label for="country-all">
          <input id="country-all" type="radio" name="set_locale" value="-1" {% if current_locale == -1 %} checked {% endif %} />
          {{ __('All', 'ecosystem-energy') }}
        </label>

        {% for locale in locales %}
          <label for="country-{{ locale.term_id }}">
            <input id="country-{{ locale.term_id }}" type="radio" name="set_locale" value="{{ locale.term_id }}" {% if current_locale == locale.term_id %} checked {% endif %} />
            {{ locale.name }}
          </label>
        {% endfor %}
      </div>
    </div>

    <button type="submit" id="country-set" class="blue btn">{{ __('Confirm', 'ecosystem-energy') }}</button>
    <a id="country-close"><i class="icon-close-medium"></i></a>
  </form>

  {# LOGO AND TOP NAV #}
  <div id="main-pane">
    <a id="logo" href="{{ site.link }}">
      <img class="normal" src="{{ theme.link }}/assets/images/logos/logo-ecosystem.svg" alt="">
      <img class="invert" src="{{ theme.link }}/assets/images/logos/logo-ecosystem-invert.svg" alt="">
    </a>

    <nav id="top-menu">
      <a id="country-toggle"><i class="icon-position-pin"></i> {{ current_locale_name ? current_locale_name : __('Select your country', 'ecosystem-energy') }}</a>
      {% do action('wpml_add_language_selector') %}
      <a id="search-toggle"><i class="icon-search"></i></a>
    </nav>

    <a id="menu-toggle">
      <div class="bars">
        <span class="bar1"></span>
        <span class="bar2"></span>
      </div>
    </a>
  </div>

  {# MAIN MENU #}
  {% include 'partials/common/menu.twig' with { items: menu_primary.items } %}

</header>