{% block content %}

  {% if featured %}
    <div class="large container">
      {% include 'partials/block-item.twig' with { 
        title: featured.title,
        section: featured.meta('related_industry')[0].post_title,
        description: featured.preview.read_more(false),
        url: featured.link,
        image: featured.thumbnail,
        isFeatured: true
      } %}
    </div>
  {% endif %}

  <div class="large container">
	  <div class="block-list">
      {% for news in items %}
      
        {% include 'partials/block-item.twig' with { 
          title: news.title,
          section: news.meta('related_industry')[0].post_title,
          description: news.preview.read_more(false),
          url: news.link,
          image: news.thumbnail
        } %}

      {% endfor %}
	  </div>
	</div>

  {% include 'partials/lists/pagination.twig' with { 'elements': items.pagination(5) } %}

{% endblock %}
