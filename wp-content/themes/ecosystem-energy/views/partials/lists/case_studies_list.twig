{% block content %}

  {% if featured %}
    <div class="large container">
    
      {% include 'partials/block-item.twig' with { 
        title: featured.title,
        surtitle: featured.meta('related_industry')[0],
        description: featured.preview.read_more(false),
        url: featured.link,
        image: featured.thumbnail,
        class: 'featured reverse',
        delay: 400
      } %}

    </div>
  {% endif %}

  <div class="large container">
	  <div class="block-list">
      {% for cs in items %}
      
        {% include 'partials/block-item.twig' with { 
          title: cs.title,
          surtitle: cs.meta('related_industry')[0],
          description: cs.preview.read_more(false),
          url: cs.link,
          image: cs.thumbnail,
          class: '',
          delay: loop.index * 100 + 400
        } %}

      {% endfor %}
	  </div>
	</div>

  {% include 'partials/lists/pagination.twig' with { 'elements': items.pagination(5) } %}

{% endblock %}
